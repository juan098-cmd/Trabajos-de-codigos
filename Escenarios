def Escenario_dia():
    print("1. Cielo")
    print("2. Paisaje")
    print("3. Iluminación")
    print("4. Volver al menú principal")


def Escenario_tarde():
    print("1. Cielo")
    print("2. Paisaje")
    print("3. Iluminación")
    print("4. Volver al menú principal")


def Escenario_noche():
    print("1. Cielo")
    print("2. Paisaje")
    print("3. Iluminación")
    print("4. Volver al menú principal")


while True:
    escenario = input("Ingrese el escenario entre día, tarde y noche o '4' para salir: ")

    if escenario.lower() == 'dia':
        while True:
            Escenario_dia()
            print("Las opciones de cielo son:")
            print("1.1 Cielo despejado.")
            print("1.2 Cielo nublado.")
            print("1.3 Cielo soleado.")
            opcion = input("Ingrese el número de la opción de cielo entre 1.1, 1.2 y 1.3 o '4' para volver al menú principal: ")

            if opcion == '1.1':
                print("Cielo despejado.")
            elif opcion == '1.2':
                print("Cielo nublado.")
            elif opcion == '1.3':
                print("Cielo soleado.")
            elif opcion == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

            print("Las opciones de paisaje son:")
            print("2.1 Ciudad.")
            print("2.2 Rural.")
            print("2.3 Callejón.")

            opcion2 = input("Ingrese el número de la opción del paisaje o '4' para volver al menú principal: ")

            if opcion2 == '2.1':
                print("Ciudad.")
            elif opcion2 == '2.2':
                print("Rural.")
            elif opcion2 == '2.3':
                print("Callejón.")
            elif opcion2 == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

            print("Las opciones de iluminación son:")
            print("3.1 Poca luz.")
            print("3.2 Mucha luz.")
            print("3.3 Equilibrado.")

            opcion3 = input("Ingrese el número de la opción de la iluminación o '4' para volver al menú principal: ")
            if opcion3 == '3.1':
                print("Poca luz.")
            elif opcion3 == '3.2':
                print("Mucha luz.")
            elif opcion3 == '3.3':
                print("Equilibrado.")
            elif opcion3 == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

    elif escenario.lower() == 'tarde':
        while True:
            Escenario_tarde()
            print("Las opciones de cielo son:")
            print("1.1 Atardecer.")
            print("1.2 Oscureciendo.")
            print("1.3 Parcialmente soleado.")

            opcion1 = input("Ingrese el número del cielo que desea o '4' para volver al menú principal: ")
            if opcion1 == '1.1':
                print("Atardecer.")
            elif opcion1 == '1.2':
                print("Oscureciendo.")
            elif opcion1 == '1.3':
                print("Parcialmente soleado.")
            elif opcion1 == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

            print("Las opciones de paisaje son:")
            print("2.1 Ciudad.")
            print("2.2 Afuera de una granja.")
            print("2.3 Patio de una casa abandonada.")

            opcion2 = input("Ingrese el número del paisaje que desea o '4' para volver al menú principal: ")
            if opcion2 == '2.1':
                print("Ciudad.")
            elif opcion2 == '2.2':
                print("Afuera de una granja.")
            elif opcion2 == '2.3':
                print("Patio de una casa abandonada.")
            elif opcion2 == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

            print("Las opciones de iluminación son:")
            print("3.1 Poca.")
            print("3.2 Suave.")
            print("3.3 Iluminación total.")

            opcion3 = input("Ingrese el número de la iluminación que desea o '4' para volver al menú principal: ")
            if opcion3 == '3.1':
                print("Poca.")
            elif opcion3 == '3.2':
                print("Suave.")
            elif opcion3 == '3.3':
                print("Iluminación total.")
            elif opcion3 == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

    elif escenario.lower() == 'noche':
        while True:
            Escenario_noche()
            print("Las opciones de cielo son:")
            print("1.1 Noche oscura.")
            print("1.2 Noche estrellada.")
            print("1.3 Noche con luna llena.")

            opcion1 = input("Ingrese el número del cielo que desea o '4' para volver al menú principal: ")
            if opcion1 == '1.1':
                print("Noche oscura.")
            elif opcion1 == '1.2':
                print("Noche estrellada.")
            elif opcion1 == '1.3':
                print("Noche con luna llena.")
            elif opcion1 == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

            print("Las opciones de paisaje son:")
            print("2.1 Manto de la noche.")
            print("2.2 En la luna.")
            print("2.3 Patio central del colegio.")

            opcion2 = input("Ingrese el número del paisaje que desea o '4' para volver al menú principal: ")
            if opcion2 == '2.1':
                print("Manto de la noche.")
            elif opcion2 == '2.2':
                print("En la luna.")
            elif opcion2 == '2.3':
                print("Patio central del colegio.")
            elif opcion2 == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

            print("Las opciones de iluminación son:")
            print("3.1 Luz de la luna.")
            print("3.2 Baja luz.")
            print("3.3 Iluminación cuarto de luna.")

            opcion3 = input("Ingrese el número de la iluminación que desea o '4' para volver al menú principal: ")
            if opcion3 == '3.1':
                print("Luz de la luna.")
            elif opcion3 == '3.2':
                print("Baja luz.")
            elif opcion3 == '3.3':
                print("Iluminación cuarto de luna.")
            elif opcion3 == '4':
                break
            else:
                print("Opción no válida. Por favor, seleccione una opción válida.")

    elif escenario == '4':
        print("Gracias por interactuar con el menú de personajes. ¡Regrese pronto!")
        break
    else:
        print("Opción no válida. Por favor, seleccione una opción válida.")

